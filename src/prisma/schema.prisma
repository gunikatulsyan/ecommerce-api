datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum Status {
    pending
    approved
    rejected
}

enum Role {
    admin
    seller
    buyer
}

model User {
    id               String   @id @unique @default(uuid())
    name             String
    address          String
    phone_code       String
    phone            String   @unique
    email            String   @unique
    role             Role
    account_password String
    numverified      Boolean
    emailverified    Boolean
    status           Status   @default(pending)
    createdAt        DateTime @default(now())
    updatedAt        DateTime @updatedAt
}

